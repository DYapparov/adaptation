<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Person servlet</servlet-name>
        <servlet-class>ru.vasya.servlet.person.PersonsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Person servlet</servlet-name>
        <url-pattern>/persons</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Person's documents servlet</servlet-name>
        <servlet-class>ru.vasya.servlet.document.DocumentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Person's documents servlet</servlet-name>
        <url-pattern>/persons_documents</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Document details servlet</servlet-name>
        <servlet-class>ru.vasya.servlet.document.DocumentDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Document details servlet</servlet-name>
        <url-pattern>/document</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Person details servlet</servlet-name>
        <servlet-class>ru.vasya.servlet.person.PersonSevlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Person details servlet</servlet-name>
        <url-pattern>/edit_person</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Photo servlet</servlet-name>
        <servlet-class>ru.vasya.servlet.person.PhotoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Photo servlet</servlet-name>
        <url-pattern>/post_photo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Update person servlet</servlet-name>
        <servlet-class>ru.vasya.servlet.person.PersonSevlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Update person servlet</servlet-name>
        <url-pattern>/update_person</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>New person servlet</servlet-name>
        <servlet-class>ru.vasya.servlet.person.NewPersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>New person servlet</servlet-name>
        <url-pattern>/new_person</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Post servlet</servlet-name>
        <servlet-class>ru.vasya.servlet.post.PostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Post servlet</servlet-name>
        <url-pattern>/posts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewPost servlet</servlet-name>
        <servlet-class>ru.vasya.servlet.post.NewPostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewPost servlet</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>

</web-app>
<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Person servlet</servlet-name>
        <servlet-class>ru.vasya.PersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Person servlet</servlet-name>
        <url-pattern>/persons</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Person's documents servlet</servlet-name>
        <servlet-class>ru.vasya.DocumentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Person's documents servlet</servlet-name>
        <url-pattern>/personDocuments</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Document details servlet</servlet-name>
        <servlet-class>ru.vasya.DocumentDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Document details servlet</servlet-name>
        <url-pattern>/documentDetails</url-pattern>
    </servlet-mapping>
</web-app>